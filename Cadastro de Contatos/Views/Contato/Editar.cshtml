@* index da ContatoController *@

@{
    ViewData["Title"] = "Editar contatos";
}

<div class="text-center">


    <h1 class="display-4">Editar Contatos</h1>


</div>

<form>
    <div class="mb-3">
        <label for="nome"> Nome</label>
        <input type="text" class="form-control" placeholder="digite o nome do contato">
    </div>
    <div class="mb-3">
        <label for="email"> E-mail</label>
        <input type="text" class="form-control" placeholder="digite o e-mail do contato">
    </div>
    <div class="mb-3">
        <label for="celular"> Celular</label>
        <input type="text" class="form-control" placeholder="digite o celular do contato">
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary" role="button">Alterar</button>
        <button class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</button>
    </div>
</form>